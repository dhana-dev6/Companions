{
  "version": 2,
  "builds": [
    {
      "src": "main.py",
      "use": "@vercel/python"
    },
    {
      "src": "web/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "main.py"
    },
    {
      "src": "/(.*\\.(css|js|html|png|mp3|ico))",
      "dest": "/web/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/web/login.html" 
      // Changed from index.html to login.html as the primary entry point
    }
  ]
}
